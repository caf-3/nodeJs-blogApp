{{#if erros}}
    <section class="container">
        <div class="red section white-text center-align">
            {{#each erros}}
                <p>{{texto}}</p>
            {{else}}
           {{/each}}
        </div>
    </section>
{{/if}}
<h3 class="center-align light">Editar postagem</h3>
<div class="container section addform z-depth-2">
    <form action="/admin/postagem/edit" method="POST">
    <input type="hidden" value="{{postagem._id}}" name="id">
        <div class="input-field">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" value="{{postagem.titulo}}" required>
        </div>
        <div class="input-field">
            <label for="slug">Slug</label>
            <input type="text" name="slug" value="{{postagem.slug}}" required>
        </div>
        <div class="input-field">
            <label for="descricao">Descrção</label>
            <input type="text" name="descricao" value="{{postagem.descricao}}" required>
        </div>
        <div class="input-field">
            <label for="conteudo">Conteudo</label>
            <textarea name="conteudo" class="materialize-textarea" required>{{postagem.conteudo}}</textarea>
        </div>
        <div class="input-field">
            <select name="categoria">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Sem nenhuma categoria</option>
                {{/each}}
            </select>
            <label>Selecione uma categoria</label>
        </div>
        <button type="submit" class="btn">Editar postagem</button>
    </form>
</div>